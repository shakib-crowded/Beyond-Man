<% layout("../Layouts/boilerplate") %>

    <body>
        <div class="login-container">
            <div class="image-container">
                <img src="Resources/images/login_side.jpg" alt="Login Side Image">
            </div>
            <div class="login-form-container">
                <form class="login-form" action="/user-login" method="post">
                    <h2 class="form-heading">Log In</h2>
                    <p class="form-subtext">Welcome back! Please enter your details to sign in.</p>
                    <div class="flex-column">
                        <label>Username</label>
                    </div>
                    <div class="inputForm">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" viewBox="0 0 32 32" height="20">
                            <g data-name="Layer 3" id="Layer_3">
                                <path
                                    d="M16,16A6,6,0,1,0,10,10,6,6,0,0,0,16,16Zm0,2c-4,0-12,2-12,6v2H28V24C28,20,20,18,16,18Z" />
                            </g>
                        </svg>
                        <input placeholder="Enter your Username" class="input" type="text" name="username">
                    </div>

                    <div class="flex-column">
                        <label>Password </label>
                    </div>
                    <div class="inputForm">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" viewBox="-64 0 512 512" height="20">
                            <path
                                d="m336 512h-288c-26.453125 0-48-21.523438-48-48v-224c0-26.476562 21.546875-48 48-48h288c26.453125 0 48 21.523438 48 48v224c0 26.476562-21.546875 48-48 48zm-288-288c-8.8125 0-16 7.167969-16 16v224c0 8.832031 7.1875 16 16 16h288c8.8125 0 16-7.167969 16-16v-224c0-8.832031-7.1875-16-16-16zm0 0">
                            </path>
                            <path
                                d="m304 224c-8.832031 0-16-7.167969-16-16v-80c0-52.929688-43.070312-96-96-96s-96 43.070312-96 96v80c0 8.832031-7.167969 16-16 16s-16-7.167969-16-16v-80c0-70.59375 57.40625-128 128-128s128 57.40625 128 128v80c0 8.832031-7.167969 16-16 16zm0 0">
                            </path>
                        </svg>
                        <input placeholder="Enter your Password" class="input" type="password" name="password"
                            id="password">

                        <div class="toggle-password"><i style="cursor: pointer;" class="fa-solid fa-eye"
                                id="showPassword" onclick="togglePassword()"></i></div>
                    </div>
                    <div class="flex-row">
                        <a href="/forgot-password"><span class="span">Forgot password?</span></a>
                    </div>
                    <button class="button-submit">Sign In</button>
                    <p class="p">Don't have an account? <a href="/user-signup"><span class="span">Sign Up</span></a></p>
                </form>
            </div>
        </div>
        <div id="blogContainer"></div>
    </body>