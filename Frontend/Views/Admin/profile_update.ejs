<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Profile Update</title>
    <style>
        .admin-profile-container {
            max-width: 500px;
            background: #fff;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin: 40px auto;
            text-align: center;
        }

        .admin-profile-container h1 {
            font-size: 1.8em;
            color: #2f1b13;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        .form-group label {
            display: block;
            font-size: 1em;
            font-weight: 500;
            color: #4a3f35;
            margin-bottom: 6px;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 10px;
            font-size: 1em;
            border: 1px solid #ccc;
            border-radius: 6px;
            transition: 0.3s;
            resize: none;
        }

        .form-group input:focus,
        .form-group textarea:focus {
            border-color: #2f1b13;
            outline: none;
        }

        .form-group input[type="file"] {
            padding: 8px;
            border: none;
        }

        .form-group img {
            margin-top: 10px;
            height: 280px;
            width: 300px;
            border-radius: 50%;
            object-fit: cover;
        }

        button {
            width: 100%;
            background: #4361ee;
            color: #fff;
            padding: 12px;
            font-size: 1.1em;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: 0.3s;
        }

        button:hover {
            background: #3f37c9;
        }

        .remove-btn {
            background: #e63946;
            margin-top: 10px;
            margin-bottom: 10px;
            color: white;
            padding: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .remove-btn:hover {
            background: #c9184a;
        }

        @media (max-width: 600px) {
            .admin-profile-container {
                padding: 20px;
            }

            button {
                font-size: 1em;
            }

            .form-group img {
                width: 100%;
                height: auto;
            }
        }
    </style>
</head>

<body>
    <div class="admin-profile-container">
        <form action="/admin/profile-edit?_method=PUT" method="post" enctype="multipart/form-data">
            <h1>Update Your Profile</h1>

            <div id="education-wrapper">
                <% admin.profile.education.forEach(function(edu, index) { %>
                    <div class="education-block">
                        <div class="form-group">
                            <label>Degree Name</label>
                            <input type="text" name="education[<%= index %>][degreeName]" value="<%= edu.degreeName %>"
                                required>
                        </div>
                        <div class="form-group">
                            <label>University Name</label>
                            <input type="text" name="education[<%= index %>][universityName]"
                                value="<%= edu.universityName %>" required>
                        </div>
                        <div class="form-group">
                            <label>Start Date</label>
                            <input type="month" name="education[<%= index %>][startingDate]"
                                value="<%= new Date(edu.startingDate).toISOString().slice(0, 7) %>" required>
                        </div>
                        <div class="form-group">
                            <label>End Date</label>
                            <input type="month" name="education[<%= index %>][endingDate]"
                                value="<%= new Date(edu.endingDate).toISOString().slice(0, 7) %>">
                        </div>

                        <button type="button" class="remove-btn" onclick="removeEducation(this)">Remove
                            Education</button>
                    </div>
                    <% }); %>
            </div>

            <button type="button" onclick="addEducation()">Add Education</button>

            <div class="form-group">
                <label for="location">Current Location</label>
                <input type="text" id="location" name="location" value="<%= admin.profile.location %>" required />
            </div>

            <div class="form-group">
                <label for="hobbies">Hobbies</label>
                <input type="text" id="hobbies" name="hobbies" value="<%= admin.profile.hobbies %>" />
            </div>

            <div class="form-group">
                <label for="instagram_profile">Instagram Profile</label>
                <input type="url" id="instagram_profile" name="instagram_profile"
                    value="<%= admin.profile.instagram_profile %>" required />
            </div>

            <div class="form-group">
                <label for="linkedin_profile">LinkedIn Profile</label>
                <input type="url" id="linkedin_profile" name="linkedin_profile"
                    value="<%= admin.profile.linkedin_profile %>" required />
            </div>

            <div class="form-group">
                <label for="x_profile">X (Twitter) Profile</label>
                <input type="url" id="x_profile" name="x_profile" value="<%= admin.profile.x_profile %>" required />
            </div>

            <div class="form-group">
                <label for="about_admin">About You</label>
                <textarea id="about_admin" name="about_admin" rows="4"
                    required><%= admin.profile.about_admin %></textarea>
            </div>

            <div class="form-group">
                <label>Current Profile Picture</label>
                <img src="<%= admin.profile.profile_image.url %>" alt="Admin's profile picture" />
            </div>

            <div class="form-group">
                <label for="profile_image">Upload New Profile Picture (Max: 1MB)</label>
                <input type="file" id="profile_image" name="profile_image" accept="image/*" />
            </div>

            <button type="submit">Update Profile</button>
        </form>
    </div>

    <script>
        function addEducation() {
            const index = document.querySelectorAll('.education-block').length;
            const wrapper = document.getElementById('education-wrapper');
            const div = document.createElement('div');
            div.classList.add('education-block');
            div.innerHTML = `
                <div class="form-group">
                    <label>Degree Name</label>
                    <input type="text" name="education[\${index}][degreeName]" required>
                </div>
                <div class="form-group">
                    <label>University Name</label>
                    <input type="text" name="education[\${index}][universityName]" required>
                </div>
                <div class="form-group">
                    <label>Start Date</label>
                    <input type="month" name="education[\${index}][startingDate]" required>
                </div>
                <div class="form-group">
                    <label>End Date</label>
                    <input type="month" name="education[\${index}][endingDate]">
                </div>
                <button type="button" class="remove-btn" onclick="removeEducation(this)">Remove Education</button>
            `;
            wrapper.appendChild(div);
        }

        function removeEducation(btn) {
            const block = btn.closest('.education-block');
            block.remove();
        }
    </script>
</body>

</html>