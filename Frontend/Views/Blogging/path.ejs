        // ============================================
        // COURSE CARD MODAL
        // ============================================
        let pathCountdownInterval;

        function showBrowseCourseCard() {
            const overlay = document.getElementById('hero-course-card-overlay');
            const card = document.getElementById('hero-course-card');
            const countdownElement = document.getElementById('countdown');

            if (!overlay || !card) return;

            overlay.classList.add('active');
            card.classList.add('active');

            // Start countdown
            let timeLeft = 5;
            countdownElement.textContent = timeLeft;

            pathCountdownInterval = setInterval(() => {
                timeLeft--;
                if (timeLeft <= 0) { closeCourseCard(); } else { countdownElement.textContent = timeLeft; }
            }, 1000);
        }
        function closeCourseCard() {
            const overlay = document.getElementById('hero-course-card-overlay'); const
                card = document.getElementById('hero-course-card'); if (!overlay || !card) return;
            overlay.classList.remove('active'); card.classList.remove('active'); // Clear countdown 
            if (pathCountdownInterval) { clearInterval(pathCountdownInterval); pathCountdownInterval = null; } // Reset countdown
            const countdownElement = document.getElementById('countdown'); if (countdownElement) {
                countdownElement.textContent = '5';
            }
        } //============================================// IMAGE ERROR HANDLING //============================================
        function handleImageError(img) {
            img.onerror = null; // Prevent infinite loop img.src='/images/placeholder.jpg' ;
            img.alt = 'Image not available';
        }
        //============================================// INITIALIZE ON DOM LOAD //============================================
        document.addEventListener('DOMContentLoaded', () => {
            // Initialize pagination handler
            // new PaginationHandler();

            // Add error handling to all images
            const images = document.querySelectorAll('.card-image');
            images.forEach(img => {
                img.addEventListener('error', () => handleImageError(img));
            });

        });

        // ============================================
        // PERFORMANCE OPTIMIZATION
        // ============================================

        // Debounce function for performance
        function debounce(func, wait) {
            let timeout;
            return function executedFunction(...args) {
                const later = () => {
                    clearTimeout(timeout);
                    func(...args);
                };
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
            };
        }

        // Lazy load images when they come into viewport
        if ('IntersectionObserver' in window) {
            const imageObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const img = entry.target;
                        if (img.dataset.src) {
                            img.src = img.dataset.src;
                            img.removeAttribute('data-src');
                        }
                        observer.unobserve(img);
                    }
                });
            });

            // Observe images with data-src attribute
            document.addEventListener('DOMContentLoaded', () => {
                const lazyImages = document.querySelectorAll('img[data-src]');
                lazyImages.forEach(img => imageObserver.observe(img));
            });
        }
