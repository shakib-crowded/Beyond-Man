<% layout("../Layouts/boilerplate") %>

    <body>
        <main class="blog-container">
            <% if(allBlogs.length> 0){ %>
                <section class="blog-grid">
                    <% for(blog of allBlogs) { %>
                        <article class="blog-card">
                            <div class="card-image-container">
                                <a href="/<%= blog.slug %>" class="card-image-link" aria-label="Read <%= blog.title %>">
                                    <img src="/images/admin_BLOGS/<%= blog.image.filename.replace('admin_BLOGS/', '') %>"
                                        alt="<%= blog.title %>" class="card-image" loading="lazy">
                                    <div class="image-overlay"></div>
                                </a>
                            </div>

                            <div class="card-content">
                                <h3 class="card-title">
                                    <a href="/<%= blog.slug %>">
                                        <%= blog.title %>
                                    </a>
                                </h3>

                                <div class="card-meta">
                                    <div class="meta-author">
                                        <a href="/author/<%= blog.admin %>" class="author-link">
                                            <svg class="meta-icon" viewBox="0 0 24 24" width="16" height="16">
                                                <path fill="currentColor"
                                                    d="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" />
                                            </svg>
                                            <%= blog.author || blog.admin %>
                                        </a>
                                    </div>

                                    <div class="meta-date">
                                        <svg class="meta-icon" viewBox="0 0 24 24" width="16" height="16">
                                            <path fill="currentColor"
                                                d="M19,19H5V8H19M16,1V3H8V1H6V3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3H18V1M17,12H12V17H17V12Z" />
                                        </svg>
                                        <time datetime="<%= new Date(blog.created_date).toISOString() %>">
                                            <%= new Date(blog.created_date).toLocaleDateString('en-US', {
                                                year: 'numeric' , month: 'short' , day: 'numeric' }) %>
                                        </time>
                                    </div>
                                </div>
                            </div>
                        </article>
                        <% } %>
                </section>

                <nav class="pagination-container">
                    <ul class="pagination-list">
                        <% const startPage=Math.max(1, currentPage - 2); const endPage=Math.min(totalPages, currentPage
                            + 2); %>

                            <% if(currentPage> 1) { %>
                                <li>
                                    <a href="?page=<%= currentPage - 1 %>&limit=<%= limit %>" class="pagination-link"
                                        aria-label="Previous page">
                                        <svg viewBox="0 0 24 24" width="16" height="16">
                                            <path fill="currentColor"
                                                d="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z" />
                                        </svg>
                                    </a>
                                </li>
                                <% } %>

                                    <% if(startPage> 1) { %>
                                        <li>
                                            <a href="?page=1&limit=<%= limit %>" class="pagination-link">1</a>
                                        </li>
                                        <% if(startPage> 2) { %>
                                            <li class="pagination-ellipsis">...</li>
                                            <% } %>
                                                <% } %>

                                                    <% for(let i=startPage; i <=endPage; i++) { %>
                                                        <li>
                                                            <% if(i===currentPage) { %>
                                                                <span class="pagination-link current"
                                                                    aria-current="page">
                                                                    <%= i %>
                                                                </span>
                                                                <% } else { %>
                                                                    <a href="?page=<%= i %>&limit=<%= limit %>"
                                                                        class="pagination-link">
                                                                        <%= i %>
                                                                    </a>
                                                                    <% } %>
                                                        </li>
                                                        <% } %>

                                                            <% if(endPage < totalPages) { %>
                                                                <% if(endPage < totalPages - 1) { %>
                                                                    <li class="pagination-ellipsis">...</li>
                                                                    <% } %>
                                                                        <li>
                                                                            <a href="?page=<%= totalPages %>&limit=<%= limit %>"
                                                                                class="pagination-link">
                                                                                <%= totalPages %>
                                                                            </a>
                                                                        </li>
                                                                        <% } %>

                                                                            <% if(currentPage < totalPages) { %>
                                                                                <li>
                                                                                    <a href="?page=<%= currentPage + 1 %>&limit=<%= limit %>"
                                                                                        class="pagination-link"
                                                                                        aria-label="Next page">
                                                                                        <svg viewBox="0 0 24 24"
                                                                                            width="16" height="16">
                                                                                            <path fill="currentColor"
                                                                                                d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" />
                                                                                        </svg>
                                                                                    </a>
                                                                                </li>
                                                                                <% } %>
                    </ul>
                </nav>
                <% } else { %>
                    <section class="no-results">
                        <div class="no-results-illustration">
                            <svg viewBox="0 0 24 24" width="80" height="80">
                                <path fill="#E5E7EB" d="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z" />
                            </svg>
                        </div>

                        <h1 class="no-results-title">No Lessons Found for "<%= languageInfo.title %>"</h1>
                        <p class="no-results-subtitle">Our team is working hard to create content for this topic</p>

                        <div class="no-results-message">
                            <p>We couldn't find any articles matching your search. Here are some suggestions:</p>
                            <ul>
                                <li>Browse our existing coding tutorials below</li>
                                <li>Check back soon as we add new content daily</li>
                                <li>Suggest this topic for future content</li>
                            </ul>
                        </div>

                        <div class="no-results-actions">
                            <a href="/" class="action-button primary">
                                <svg viewBox="0 0 24 24" width="18" height="18">
                                    <path fill="currentColor" d="M10,20V14H14V20H19V12H22L12,3L2,12H5V20H10Z" />
                                </svg>
                                Browse All Courses
                            </a>
                            <a href="/contact" class="action-button secondary">
                                <svg viewBox="0 0 24 24" width="18" height="18">
                                    <path fill="currentColor"
                                        d="M20,2H4A2,2 0 0,0 2,4V22L6,18H20A2,2 0 0,0 22,16V4A2,2 0 0,0 20,2Z" />
                                </svg>
                                Suggest a Topic
                            </a>
                        </div>
                    </section>
                    <% } %>
        </main>
    </body>

    <style>
        .blog-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }

        .blog-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 2rem;
            margin-bottom: 3rem;
        }

        .blog-card {
            background: white;
            border-radius: 0.5rem;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            display: flex;
            flex-direction: column;
        }

        .blog-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
        }

        .card-image-container {
            position: relative;
            padding-top: 56.25%;
            /* 16:9 aspect ratio */
            overflow: hidden;
        }

        .card-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .image-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to top, rgba(0, 0, 0, 0.5), transparent 40%);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .blog-card:hover .image-overlay {
            opacity: 1;
        }

        .blog-card:hover .card-image {
            transform: scale(1.05);
        }

        .card-content {
            padding: 1.25rem;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .card-title {
            font-size: 1.125rem;
            font-weight: 600;
            margin-bottom: 0.75rem;
            line-height: 1.4;
            color: #1f2937;
        }

        .card-title a {
            color: inherit;
            text-decoration: none;
            transition: color 0.2s ease;
        }

        .card-title a:hover {
            color: #3b82f6;
        }

        .card-meta {
            margin-top: auto;
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            font-size: 0.875rem;
            color: #6b7280;
        }

        .meta-author,
        .meta-date {
            display: flex;
            align-items: center;
            gap: 0.375rem;
        }

        .meta-icon {
            flex-shrink: 0;
        }

        .author-link {
            color: inherit;
            text-decoration: none;
            transition: color 0.2s ease;
        }

        .author-link:hover {
            color: #3b82f6;
        }

        /* Pagination Styles */
        .pagination-container {
            margin-top: 3rem;
        }

        .pagination-list {
            display: flex;
            list-style: none;
            padding: 0;
            margin: 0;
            justify-content: center;
            gap: 0.5rem;
        }

        .pagination-link {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 2.5rem;
            height: 2.5rem;
            border-radius: 0.375rem;
            text-decoration: none;
            color: #4b5563;
            font-weight: 500;
            transition: all 0.2s ease;
        }

        .pagination-link:hover {
            background-color: #f3f4f6;
            color: #1f2937;
        }

        .pagination-link.current {
            background-color: #3b82f6;
            color: white;
        }

        .pagination-ellipsis {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 2.5rem;
            height: 2.5rem;
            color: #9ca3af;
        }

        /* No Results Styles */
        .no-results {
            text-align: center;
            max-width: 600px;
            margin: 0 auto;
            padding: 3rem 1rem;
        }

        .no-results-illustration {
            margin-bottom: 1.5rem;
        }

        .no-results-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #1f2937;
            margin-bottom: 0.5rem;
        }

        .no-results-subtitle {
            font-size: 1.125rem;
            color: #6b7280;
            margin-bottom: 2rem;
        }

        .no-results-message {
            background-color: #f9fafb;
            border-radius: 0.5rem;
            padding: 1.5rem;
            margin-bottom: 2rem;
            text-align: left;
        }

        .no-results-message p {
            margin-bottom: 1rem;
            color: #4b5563;
        }

        .no-results-message ul {
            padding-left: 1.5rem;
            color: #4b5563;
        }

        .no-results-message li {
            margin-bottom: 0.5rem;
        }

        .no-results-actions {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        .action-button {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            border-radius: 0.375rem;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.2s ease;
        }

        .action-button.primary {
            background-color: #3b82f6;
            color: white;
        }

        .action-button.primary:hover {
            background-color: #2563eb;
        }

        .action-button.secondary {
            border: 1px solid #d1d5db;
            color: #4b5563;
        }

        .action-button.secondary:hover {
            background-color: #f3f4f6;
        }

        @media (max-width: 768px) {
            .blog-grid {
                grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
            }

            .no-results-actions {
                flex-direction: column;
            }

            .action-button {
                justify-content: center;
            }
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const blogContainer = document.querySelector('.blog-container');

            document.querySelector('.pagination-list')?.addEventListener('click', async function (e) {
                if (e.target.closest('a')) {
                    e.preventDefault();
                    const link = e.target.closest('a');
                    const url = link.getAttribute('href');

                    try {
                        // Show loading state
                        blogContainer.classList.add('loading');

                        const response = await fetch(url, {
                            headers: {
                                'X-Requested-With': 'XMLHttpRequest',
                                'Accept': 'application/json'
                            }
                        });

                        if (!response.ok) throw new Error('Network response was not ok');

                        const data = await response.json();

                        // Update content
                        document.querySelector('.blog-grid').innerHTML = data.html;

                        // Update pagination controls
                        updatePagination(data.pagination);

                        // Update URL without reload
                        history.pushState(null, null, url);

                        // Smooth scroll to top
                        window.scrollTo({
                            top: 0,
                            behavior: 'smooth'
                        });
                    } catch (error) {
                        console.error('Error:', error);
                        alert('Error loading content. Please try again.');
                    } finally {
                        blogContainer.classList.remove('loading');
                    }
                }
            });

            // Handle browser back/forward
            window.addEventListener('popstate', function () {
                window.location.reload();
            });

            function updatePagination(pagination) {
                const { totalPages, currentPage, limit } = pagination;

                // Generate new pagination HTML
                let paginationHTML = '';

                // Previous button
                if (currentPage > 1) {
                    paginationHTML += `
          <li>
            <a href="?page=${currentPage - 1}&limit=${limit}" class="pagination-link" aria-label="Previous page">
              <svg viewBox="0 0 24 24" width="16" height="16">
                <path fill="currentColor" d="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z" />
              </svg>
            </a>
          </li>`;
                }

                // Page numbers
                const startPage = Math.max(1, currentPage - 2);
                const endPage = Math.min(totalPages, currentPage + 2);

                if (startPage > 1) {
                    paginationHTML += `<li><a href="?page=1&limit=${limit}" class="pagination-link">1</a></li>`;
                    if (startPage > 2) {
                        paginationHTML += `<li class="pagination-ellipsis">...</li>`;
                    }
                }

                for (let i = startPage; i <= endPage; i++) {
                    if (i === currentPage) {
                        paginationHTML += `
            <li>
              <span class="pagination-link current" aria-current="page">${i}</span>
            </li>`;
                    } else {
                        paginationHTML += `
            <li>
              <a href="?page=${i}&limit=${limit}" class="pagination-link">${i}</a>
            </li>`;
                    }
                }

                if (endPage < totalPages) {
                    if (endPage < totalPages - 1) {
                        paginationHTML += `<li class="pagination-ellipsis">...</li>`;
                    }
                    paginationHTML += `
          <li>
            <a href="?page=${totalPages}&limit=${limit}" class="pagination-link">${totalPages}</a>
          </li>`;
                }

                // Next button
                if (currentPage < totalPages) {
                    paginationHTML += `
          <li>
            <a href="?page=${currentPage + 1}&limit=${limit}" class="pagination-link" aria-label="Next page">
              <svg viewBox="0 0 24 24" width="16" height="16">
                <path fill="currentColor" d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" />
              </svg>
            </a>
          </li>`;
                }

                // Update the pagination container
                document.querySelector('.pagination-list').innerHTML = paginationHTML;
            }
        });
    </script>